{
  "compilerOptions": {
    "outDir": "bin",         
    "target": "es5",           
    "module": "commonjs",                 
    "lib": ["es6", "es2015", "dom"], 
    "declaration": true,     
    "rootDir": "src",       
    "strict": true,        
    "types": ["node"],
    "esModuleInterop": true,   
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true
  }
}
